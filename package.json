{
  "name": "rebirthdb-desktop",
  "version": "1.0.0",
  "description": "RebirthDB desktop client",
  "main": "main.js",
  "scripts": {
    "prod": "webpack-cli --mode production --config  webpack.config.prod.js",
    "dev": "cross-env START_HOT=1 cross-env START_HOT=1 npm run start-renderer-dev",
    "package": "npm run build && build --publish never",
    "package-all": "npm run build && build -mwl",
    "package-linux": "npm run build && build --linux",
    "package-win": "npm run build && build --win --x64",
    "precommit": "lint-staged",
    "standard": "standard --fix 'app/**/*.js'",
    "standard-html": "standard --fix --plugin html '**/*.html'",
    "standard-markdown": "standard --fix --plugin markdown '**/*.md'",
    "start": "cross-env NODE_ENV=production electron .",
    "start-main-dev": "cross-env HOT=1 NODE_ENV=development electron .",
    "start-renderer-dev": "cross-env NODE_ENV=development node --trace-warnings -r babel-register ./node_modules/webpack-dev-server/bin/webpack-dev-server --mode development --config webpack.config.dev.js",
    "test": "npm run standard && jest --env=node",
    "test-all": "npm run lint && npm run flow && npm run build && npm run test && npm run test-e2e",
    "test-e2e": "cross-env NODE_ENV=test BABEL_DISABLE_CACHE=1 node --trace-warnings -r babel-register ./internals/scripts/RunTests.js e2e",
    "test-watch": "npm test -- --watch",
    "lint": "prettier 'app/**/*.js' --write && yarn standard && yarn standard-html && yarn standard-markdown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RebirthDB/rebirthdb-desktop.git"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/RebirthDB/rebirthdb-desktop/issues"
  },
  "homepage": "https://github.com/RebirthDB/rebirthdb-desktop#readme",
  "dependencies": {
    "add": "^2.0.6",
    "babel-plugin-emotion": "^9.1.2",
    "electron-better-ipc": "^0.1.1",
    "electron-store": "^1.3.0",
    "emotion": "^9.1.3",
    "formik": "^0.11.11",
    "history": "^4.7.2",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "pluralize": "^7.0.0",
    "prop-types": "^15.6.1",
    "randomcolor": "^0.5.3",
    "rc-dialog": "^7.1.7",
    "rc-dropdown": "^2.2.0",
    "rc-menu": "^7.0.5",
    "react": "^16.3.2",
    "react-burger-menu": "^2.5.0",
    "react-dom": "^16.3.2",
    "react-emotion": "^9.1.3",
    "react-error-boundary": "^1.2.2",
    "react-monaco-editor": "^0.17.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-s-alert": "^1.4.1",
    "react-switch": "^3.0.4",
    "rebirthdb-ts": "https://github.com/rebirthdb/rebirthdb-ts.git",
    "rethinkdb": "^2.3.3",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.4",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-import": "^1.7.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.1.5",
    "css-loader": "^0.28.11",
    "electron": "^2.0.0",
    "electron-builder": "^20.13.2",
    "electron-debug": "^1.5.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-reload": "^1.2.2",
    "error-overlay-webpack-plugin": "^0.1.4",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "json-loader": "^0.5.7",
    "less": "^3.0.2",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.2.2",
    "monaco-editor-webpack-plugin": "^1.3.0",
    "prettier": "^1.12.1",
    "react-hot-loader": "^4.1.2",
    "react-test-renderer": "^16.4.0",
    "standard": "^11.0.1",
    "style-loader": "^0.21.0",
    "svg-sprite-loader": "^3.7.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/**/*.test.js"
    ],
    "env": [
      "jest"
    ]
  },
  "lint-staged": {
    "*.{html,md,js}": [
      "yarn lint",
      "git add"
    ]
  }
}
